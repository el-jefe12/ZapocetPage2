@page
@model TexasGuyContract.Pages.Forms.AddHistoryEntryModel
@{
    ViewData["Title"] = "Add History Entry";
}

<form method="post">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="HistoryEntry.Value" class="control-label"></label>
                <input asp-for="HistoryEntry.Value" class="form-control" />
                <span asp-validation-for="HistoryEntry.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HistoryEntry.StationID" class="control-label"></label>
                <select asp-for="HistoryEntry.StationID" class="form-control" asp-items="Model.Stations"></select>
                <span asp-validation-for="HistoryEntry.StationID" class="text-danger"></span>
            </div>

            <button class="btn btn-primary mt-4" type="submit">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
